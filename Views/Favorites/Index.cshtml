@model List<OlympicGames.Models.Country>

<h2>Favorites</h2>
<a asp-action="Index" asp-controller="Home">Return to Home Page</a>
<form asp-action="ClearFavorites" method="post">
    <button type="submit">Clear Favorites</button>
</form>

@if (Model.Any())
{
    <ul>
        @foreach (var country in Model)
        {
            <li>
                <img src="@country.FlagUrl" alt="@country.Name" width="30" />
                @country.Name
            </li>
        }
    </ul>
}
else
{
    <p>No favorites added yet.</p>
}
