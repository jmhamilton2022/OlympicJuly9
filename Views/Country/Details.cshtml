@model OlympicGames.Models.Country

<div>
    <h2>@Model.Name</h2>
    <p><img src="@Model.FlagUrl" alt="@Model.Name" /></p>
    <p>Game: @Model.Game</p>
    <p>Sport: @Model.Sport</p>
    <p>Type: @Model.Type</p>

    <a asp-action="Index" asp-controller="Home">Return to Home Page</a>
    <form asp-action="AddToFavorites" asp-controller="Favorites" method="post">
        <input type="hidden" name="countryId" value="@Model.Id" />
        <button type="submit">Add to Favorites</button>
    </form>
</div>
